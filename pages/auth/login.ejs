<div style="
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 80vh;
  ">
  <!-- 로고 -->
  <div style="display: flex; justify-content: center">
    <a href="/">
      <img src="/assets/images/Reborn_logo2.svg" style="width: 472px; height: auto" alt="Reborn" />
    </a>
  </div>

  <div style="
      border: 1px solid #adb5bd;
      padding-top: 25px;
      padding-bottom: 25px;
      width: 430px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 20px;
    ">
    <!-- 이메일 입력 -->
    <div class="form-floating mb-3" style="width: 373px">
      <input type="email" class="form-control" id="email" placeholder="이메일">
      <label for="floatingInput">이메일</label>
    </div>

    <!-- 비밀번호 입력 -->
    <div class="form-floating mb-3" style="width: 373px">
      <input type="password" class="form-control" id="password" placeholder="비밀번호">
      <label for="floatingInput">비밀번호</label>
    </div>

    <!-- 경고문구 -->
    <p style="color: #e35d6a; font-family: LINESeed-BD; font-size: 14px; block: none" id="warningText">
    </p>

    <!-- 로그인 버튼 -->
    <div>
      <button type="button" class="global-btn" style="width: 373px" id="loginBtn">
        로그인
      </button>
    </div>
  </div>

  <!-- 칸 아래 -->
  <div class="login-texts" style="display: flex; padding-top: 18px">
    <div>
      <a href="/auth">회원가입</a>
    </div>
    <div style="padding-left: 30px; padding-right: 30px" onclick="alert('아직 구현 안 됨')">
      <a href="">비밀번호 찾기</a>
    </div>
    <div onclick="alert('아직 구현 안 됨')"><a href="">아이디 찾기</a></div>
  </div>
</div>

