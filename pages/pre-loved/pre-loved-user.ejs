<!-- 검색 및 정렬 -->
<div style="
    display: flex;
    justify-content: center;
    margin-top: 41px;
    margin-bottom: 41px;
  ">
  <div class="input-group mb-3" style="width: 437px; margin-right: 30px">
    <input type="text" class="form-control" id="userProductSearch" placeholder="상품을 검색해보세요." oninput="logInputValue()" />
  </div>

  <div>
    <select class="form-select" id="userProductSort" style="width: 110px; text-align: center; margin-right: 30px">
      <option selected value="latest">최신순</option>
      <option value="name">이름순</option>
    </select>
  </div>

  <button id="onlyAvailableButton" style="
      font-family: LINESeed-RG;
      background-color: #FFFFFF;
      color: #333;
      border: 1px solid #dedede;
      border-radius: 5px;
      padding: 6px 16px;
      height: 38px; 
      font-size: 15px; 
      cursor: pointer;
      transition: background-color 0.3s ease, color 0.3s ease;
    " onclick="toggleAvailableProductsButton()">
    판매중인 제품 보기
  </button>
</div>

