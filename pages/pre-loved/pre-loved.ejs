<!-- 설명 -->
<div class="page-box" style="background-color: #f8d7da; padding-top: 182px; padding-bottom: 182px">
  <div style="margin-right: 12px">
    <p class="page-theme">
      내 이웃과 나누는<br />
      믿음 있는 거래
    </p>
    <p class="page-detail" style="margin-top: 58px">
      가까운 이웃들과 따뜻하고<br />
      신뢰할 수 있는 거래를 경험해보세요.
    </p>
    <button type="button" class="global-btn" style="width: 174px" data-bs-toggle="modal" data-bs-target="#modalContainer" id="preLovedProductCreateBtn">
      내 물건 등록하기
    </button>
  </div>
  <img src="/assets/images/pre-loved.svg" style="height: 390px; width: auto; padding-top: 8px" />
</div>

<!-- 검색 및 정렬 -->
<div style="
    display: flex;
    justify-content: center;
    margin-top: 41px;
    margin-bottom: 41px;
  ">
  <div class="input-group mb-3" style="width: 437px; margin-right: 30px">
    <input type="text" class="form-control" id="preLovedSearch" placeholder="물품을 검색해보세요." oninput="logInputValue()" />
  </div>

  <div>
    <select class="form-select" id="preLovedSort" style="width: 110px; text-align: center">
      <option selected value="latest">최신순</option>
      <option value="name">이름순</option>
    </select>
  </div>
</div>

<!-- 카드 -->
<div id="productContainer">
</div>

<%- include("../views/components/modal", {modalTitle: '내 물건 등록하기',
modalBody: `
    <!-- 파일 선택-->
        <div style="font-family: LINESeed-RG; color: #6c757d; font-size: 15px">📢 물건 이미지를 선택해주세요.</div>
        <div class="input-group mb-3" style="width: 586px">
          <input type="file" class="form-control" id="preLovedProductImages" multiple>
          <label class="input-group-text" for="preLovedProductImages">Upload</label>
          <span id="preLovedProductImagesId" style="display: none" data-value="3"></span>
        </div>

        <!-- 제품명 -->
        <div class="form-floating mb-3" style="width: 586px">
          <input type="text" class="form-control" id="productName" placeholder="제품명">
          <label for="floatingInput">제품명</label>
        </div>

        <!-- 제품 가격 -->
        <div class="form-floating mb-3" style="width: 586px">
          <input type="number" class="form-control" id="productPrice" placeholder="제품가격">
          <label for="floatingInput">제품 가격</label>
        </div>

        <!-- 제품 설명 -->
        <div class="form-floating mb-3" style="width: 586px">
          <textarea class="form-control" id="productDetail" placeholder="제품 설명" style="height: 150px"></textarea>
          <label for="productDetail">제품 설명</label>
        </div>
  `, modalCloseBtn: '취소', modalCheckBtn: '등록', modalCheck: 'createProduct'})%>

<!-- 토스트 메시지 -->
<%- include("../views/components/toast", 
  {toastMessage: "물건이 등록되었습니다."}) %>

<script src="/js/pre-loved/preLovedHandler.js"></script>